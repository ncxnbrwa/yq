<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="12dp"
    android:foreground="?attr/selectableItemBackground"
    app:contentPadding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_emo_face"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:src="@drawable/emo_zhengmian" />

        <TextView
            android:id="@+id/tv_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/iv_emo_face"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/primary_text_color"
            android:textSize="14sp"
            tools:text="标题" />

        <TextView
            android:id="@+id/tv_news_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_news_title"
            android:layout_below="@+id/tv_news_title"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/iv_emo_face"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/secondary_text_color"
            android:textSize="12sp"
            tools:text="无法简洁表达你的想法,那只说明你不够中石油化." />

        <TextView
            android:id="@+id/tv_news_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_news_title"
            android:layout_below="@+id/tv_news_detail"
            android:layout_marginTop="6dp"
            android:textColor="@color/secondary_text_color"
            android:textSize="12sp"
            tools:text="微信公众号" />

        <TextView
            android:id="@+id/tv_news_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_news_media"
            android:layout_below="@+id/tv_news_media"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:textColor="@color/secondary_text_color"
            android:textSize="12sp"
            tools:text="13:54" />

    </RelativeLayout>

</android.support.v7.widget.CardView>