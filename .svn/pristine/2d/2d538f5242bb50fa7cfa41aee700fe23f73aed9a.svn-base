<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    app:contentPadding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_warning"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_warning" />

        <TextView
            android:id="@+id/tv_warning_color"
            style="@style/AppBaseTheme.WarningText"
            android:layout_alignTop="@+id/iv_warning"
            android:layout_toRightOf="@+id/iv_warning"
            tools:text="黄色预警" />

        <!--<TextView-->
            <!--android:id="@+id/tv_warning_time"-->
            <!--style="@style/AppBaseTheme.WarningText"-->
            <!--android:layout_toRightOf="@+id/tv_warning_color"-->
            <!--tools:text="2017-10-28" />-->

        <TextView
            android:id="@+id/tv_warning_detail"
            style="@style/AppBaseTheme.WarningText"
            android:layout_alignBottom="@+id/iv_warning"
            android:layout_toRightOf="@+id/iv_warning"
            tools:text="内容" />

        <!--<TextView-->
            <!--android:id="@+id/tv_warning_company"-->
            <!--style="@style/AppBaseTheme.WarningText"-->
            <!--android:layout_toRightOf="@+id/tv_warning_detail"-->
            <!--android:layout_alignBottom="@+id/iv_warning"-->
            <!--tools:text="乐仕股份" />-->
    </RelativeLayout>

</android.support.v7.widget.CardView>