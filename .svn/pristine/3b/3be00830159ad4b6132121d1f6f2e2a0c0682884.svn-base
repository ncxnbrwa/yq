<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">

    </style>


    <style name="indicator_dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 除去title -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 除去背景色 -->
    </style>

    <style name="activity_animation_style">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_back</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_forward</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="myDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/gray</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">#313233</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--主界面底部radiobutton样式-->
    <style name="radiobutton_whole">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/home_titlesize</item>
    </style>

    <!--右侧箭头样式-->
    <style name="right_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/arrow_right</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--所有按钮的样式-->
    <style name="all_button_style">
        <item name="android:background">@drawable/all_button_background</item>
        <item name="android:textColor">@color/all_button_textcolor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">@dimen/common_padding</item>
    </style>

    <!--所有按钮的样式2-->
    <style name="all_button_style2">
        <item name="android:background">@drawable/all_button_background2</item>
        <item name="android:textColor">@color/all_button_textcolor2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">@dimen/common_padding</item>
    </style>

</resources>
