<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="AppBaseTheme" parent="QMUI.Compat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/activity_animation_style</item>
    </style>

    <style name="MainActivityTheme" parent="AppBaseTheme">
        <item name="android:windowAnimationStyle">@style/activity_animation_style</item>
    </style>

    <style name="activity_animation_style">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/open_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <!--启动图样式-->
    <style name="SplashTheme" parent="AppBaseTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:windowAnimationStyle">@style/activity_animation_style</item>
    </style>

    <!--toolbar标题样式-->
    <style name="toolbar_title_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Toolbar样式-->
    <style name="AppBaseTheme.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--主页头部文字样式-->
    <style name="AppBaseTheme.HotNewsText">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">#F8F8F8</item>
        <item name="android:padding">6dp</item>
        <item name="android:drawableRight">@drawable/icon_down_orange</item>
    </style>

    <!--筛选时间的弹窗文字样式-->
    <style name="popwindow_headtime">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <!--筛选平台和情感的弹窗文字样式-->
    <style name="popwindow_plat_emotion">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">start</item>
        <item name="android:clickable">true</item>
    </style>

    <!--预警页面文字样式-->
    <style name="AppBaseTheme.WarningText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginLeft">6dp</item>
    </style>

    <!--头部时间范围选择文字样式-->
    <style name="head_right_time_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:drawableRight">@drawable/icon_down_orange</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:clickable">true</item>
    </style>

    <!--右侧箭头样式-->
    <style name="right_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/arrow_right</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--所有按钮的样式-->
    <style name="button_normal">
        <item name="android:background">@drawable/button_normal_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--登录按钮-->
    <style name="button_login">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">@drawable/button_login_background</item>
    </style>

    <!--登录输入框-->
    <style name="edit_login">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--个人中心类型文字-->
    <style name="mine_type_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <!--个人中心具体数据文字-->
    <style name="mine_data_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

</resources>
